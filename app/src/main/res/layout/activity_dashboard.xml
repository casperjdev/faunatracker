<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSecondary"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".dashboard.DashboardActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Top App Bar -->
        <include layout="@layout/component_home_navbar" />

        <FrameLayout
            android:id="@+id/contentFrame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="16sp">

            <TextView
                android:id="@+id/dashboard_greeting"
                android:layout_width="wrap_content"
                android:layout_height="32sp"
                android:textSize="24sp"
                android:textColor="?attr/colorPrimary"
                />

            <!-- Empty state -->
            <LinearLayout
                android:id="@+id/dashboard_placeholder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="196dp"
                    android:layout_height="96dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/logo"
                    app:tint="?attr/colorPrimaryVariant" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text="@string/dashboard_placeholder"
                    android:textColor="?attr/colorPrimaryVariant"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:textAlignment="center"
                    />
            </LinearLayout>

            <!-- RecyclerView for studies -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/dashboard_list"
                android:visibility="gone"
                android:layout_marginTop="64sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>


    </LinearLayout>

    <!-- Floating Search Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/dashboard_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:backgroundTint="?attr/colorPrimary"
        android:contentDescription="@string/dashboard_search_desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/search"
        app:tint="?attr/colorSecondary"
        >
    </com.google.android.material.floatingactionbutton.FloatingActionButton>
</androidx.constraintlayout.widget.ConstraintLayout>